# Environment variables for Mitra AI Server
# Copy this file to .env and fill in your values

# Required: Google AI API Key for Gemini
GOOGLE_API_KEY=your_gemini_api_key_here

# Required: Firebase Project Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-service-account.json

# Optional: Server Configuration
DEBUG=true
ENVIRONMENT=development
PORT=8000
HOST=0.0.0.0

# Optional: Google Cloud Project (if different from Firebase)
GOOGLE_CLOUD_PROJECT=your_gcp_project_id

# Optional: Additional Configuration
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
CRISIS_CONFIDENCE_THRESHOLD=0.7
SAFETY_CHECK_ENABLED=true

# Production settings (when ENVIRONMENT=production)
# ALLOWED_ORIGINS=https://mitra-ai.web.app,https://mitra-ai.firebaseapp.com